<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="P05_ControleXF.Controles.EntryEditorPage">
    <ContentPage.Content>
        <StackLayout>
            <Entry
                x:Name="EntryIdade"
                Text=""
                TextColor="Black"
                Placeholder="Digite sua idade"
                PlaceholderColor="DarkSlateGray"
                IsPassword="False"

                Keyboard="Numeric"
                BackgroundColor="PaleGreen" />
            <Label x:Name="Label" />

            <Editor x:Name="EditorComentario" HeightRequest="200" />
            <Label x:Name="LabelQuantChar" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>