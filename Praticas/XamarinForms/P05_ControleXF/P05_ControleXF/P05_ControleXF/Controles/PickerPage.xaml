<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="P05_ControleXF.Controles.PickerPage">
    <ContentPage.Content>
        <StackLayout>
            <Picker
                Title="Empresas de TI"
                TextColor="Green"
                SelectedIndex="3"
                SelectedIndexChanged="HandleIndexChanged"
                VerticalOptions="CenterAndExpand"
                HorizontalOptions="CenterAndExpand">
                <Picker.Items>
                    <x:String>Amazon</x:String>
                    <x:String>Google</x:String>
                    <x:String>Apple</x:String>
                    <x:String>Red Hat</x:String>
                </Picker.Items>
            </Picker>
            <Label
                x:Name="LabelSelectedItem"
                VerticalOptions="CenterAndExpand"
                HorizontalOptions="CenterAndExpand" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>