<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="P03_LayoutXF.Layouts.Absolute.AbsolutePage">
    <ContentPage.Content>
        <AbsoluteLayout>
            <!-- AbsoluteLayout.LayoutBounds="X, Y, W, H" -->
            <BoxView AbsoluteLayout.LayoutBounds="0, 0, 200, 100" BackgroundColor="DarkGreen" />
            <BoxView AbsoluteLayout.LayoutBounds="50, 50, 100, 100" BackgroundColor="DarkOliveGreen" />
            <BoxView AbsoluteLayout.LayoutBounds="150, 150, 50, 50" BackgroundColor="DarkSeaGreen" />
        
            <BoxView AbsoluteLayout.LayoutFlags="WidthProportional" AbsoluteLayout.LayoutBounds="0, 400, 0.8, 100" BackgroundColor="ForestGreen" />
            <BoxView AbsoluteLayout.LayoutFlags="SizeProportional" AbsoluteLayout.LayoutBounds="300, 300, 0.5, 0.5" BackgroundColor="MediumSeaGreen" />
        
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>