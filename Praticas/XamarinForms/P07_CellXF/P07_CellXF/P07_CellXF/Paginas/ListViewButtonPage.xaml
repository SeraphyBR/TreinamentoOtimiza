<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="P07_CellXF.Paginas.ListViewButtonPage">
    <ContentPage.Content>
        <ListView x:Name="ListFuncionarios" HasUnevenRows="True">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout>
                            <Label Text="{Binding Nome}"/>
                            <Label Text="{Binding Cargo}"/>
                            <Button 
                                Text="Ferias" 
                                Clicked="HandleClickedEvent" 
                                CommandParameter="{Binding .}"
                                />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</ContentPage>