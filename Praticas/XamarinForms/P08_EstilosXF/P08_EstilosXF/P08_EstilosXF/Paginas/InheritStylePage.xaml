<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="P08_EstilosXF.Paginas.InheritStylePage">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="StyleView" TargetType="View">
                <Setter Property="VerticalOptions" Value="CenterAndExpand" />
                <Setter Property="HorizontalOptions" Value="CenterAndExpand" />
                <Setter Property="BackgroundColor" Value="Green" />
            </Style>
            <Style x:Key="StyleLabel" BasedOn="{StaticResource StyleView}" TargetType="Label">
                <Setter Property="TextColor" Value="DarkGreen" />
            </Style>
            <Style x:Key="StyleButton" BasedOn="{StaticResource StyleView}" TargetType="Button">
                <Setter Property="TextColor" Value="DarkBlue" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
        <StackLayout>
            <Label
                Text="Welcome to Xamarin.Forms!"
                Style="{StaticResource StyleLabel}" />
            <Label
                Text="Welcome to Xamarin.Forms!"
                Style="{StaticResource StyleLabel}" />
            <Label Text="Welcome to Xamarin.Forms!" />
            <Button Text="Ok"
                    Style="{StaticResource StyleButton}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>